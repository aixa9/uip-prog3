<Calculador>:
    id: calcular
    num: campo

    BoxLayout:
        orientation: 'vertical'
        #padding: 50
        spacing: 8

        TextInput:
            id: campo
            size_hint: 1, None   #P1 T vertical, P2  T Horizontal
            font_size: 20
            multiline: False

        GridLayout:
            rows: 5
            cols: 4

            Button:
                text: '7'
                on_press: campo.text += self.text
                #size_hint: -7,-5


            Button:
                text: '8'
                on_press: campo.text += self.text

            Button:
                text: '9'
                on_press: campo.text += self.text

            Button:
                text: '/'
                on_press: campo.text += self.text
                color: 1,2,3
                background_color: 1,2,3,0.8
                font_size: 15
            Button:
                text: '4'
                on_press: campo.text += self.text

            Button:
                text: '5'
                on_press: campo.text += self.text

            Button:
                text: '6'
                on_press: campo.text += self.text

            Button:
                text: '*'
                on_press: campo.text += self.text
                color: 1,2,3
                background_color: 1,2,3,0.8
                font_size: 15
            Button:
                text: '1'
                on_press: campo.text += self.text

            Button:
                text: '2'
                on_press: campo.text += self.text

            Button:
                text: '3'
                on_press: campo.text += self.text

            Button:
                text: '-'
                on_press: campo.text += self.text
                color: 1,2,3
                background_color: 1,2,3,0.8
                font_size: 18
            Button:
                text: 'C'
                on_press: calcular.Borrar(campo.text)
                color: 1,2,3
                background_color: 1,2,3,0.8

            Button:
                text: '0'
                on_press: campo.text += self.text

            Button:
                text: '.'
                on_press:campo.text += self.text
                color: 1,2,3
                background_color: 1,2,3,0.8
                font_size: 16
            Button:
                text: '+'
                on_press: campo.text += self.text
                color: 1,2,3
                background_color: 1,2,3,0.8
                font_size: 15
            Button:
                text: '='
                on_press: calcular.Calculos(campo.text)
                color: 1,2,3
                background_color: 1,2,3,0.8
                font_size: 15

            Button:
                text: 'Delete'
                on_press: calcular.elim(campo.text)
                color: 1,2,3
                background_color: 2,0,0,0.8